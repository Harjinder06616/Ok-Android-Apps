<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="20dp"
    tools:context=".reshowshayari">

    <LinearLayout
        android:id="@+id/laout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/UserNameShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_person_24"
            android:drawablePadding="3dp"
            android:gravity="start"
            android:text="UserName"
            android:textColor="#B80E69"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shayaritext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="start"
            android:text="Shayari"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/laout1">

        <Button
            android:id="@+id/likebtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white_pressed"
            android:drawableLeft="@drawable/ic_like"
            android:paddingLeft="30dp" />

        <Button
            android:id="@+id/copybtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white_pressed"
            android:drawableLeft="@drawable/ic_copy24"
            android:paddingLeft="30dp" />

        <Button
            android:id="@+id/sharebtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white_pressed"
            android:drawableLeft="@drawable/ic_share_24"
            android:paddingLeft="30dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
